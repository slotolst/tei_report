      <p rend="left" id="509fd010-6120-4f64-ba00-a6293b2c5d52">
        <choice>
          <reg>Вот</reg>
          <orig>Вотъ</orig>
        </choice>
        <choice>
          <reg>об</reg>
          <orig>объ</orig>
        </choice>
        <choice>
          <reg>этом-то</reg>
          <orig>этомъ-то</orig>
        </choice>
        <choice>
