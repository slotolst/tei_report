          <reg>из</reg>
          <orig>изъ</orig>
        </choice>
        <choice>
          <reg>уст</reg>
          <orig>устъ</orig>
        </choice>
        <choice>
          <reg>твоих</reg>
          <orig>твоихъ</orig>
        </choice>
        <choice>
          <reg>богомерзких</reg>
          <orig>богомерзкихъ</orig>
        </choice>
        <choice>
          <reg>учение</reg>
