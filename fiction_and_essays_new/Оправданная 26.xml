   <div type="section" xml:id="h000013">
    <head rend="center">
     <hi rend="strong">
      НЕОПУБЛИКОВАННОЕ, НЕОТДЕЛАННОЕ И НЕОКОНЧЕННОЕ
     </hi>
     <lb/>
     <lb/>
