     <choice>
      <reg>
       тень
      </reg>
      <orig>
       тѣнь
      </orig>
     </choice>
     ». 3)
     <choice>
      <reg>
       Страх
      </reg>
      <orig>
       Страхъ
      </orig>
     </choice>
