       <orig>
        Покойникъ
       </orig>
      </choice>
      <choice>
       <reg>
        был
       </reg>
       <orig>
        былъ
       </orig>
      </choice>
      <choice>
       <reg>
        в
       </reg>
       <orig>
        въ
