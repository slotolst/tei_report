      <choice>
       <reg>
        месяц
       </reg>
       <orig>
        мѣсяцъ
       </orig>
      </choice>
      <choice>
       <reg>
        он
       </reg>
       <orig>
        онъ
       </orig>
      </choice>
      не
      <choice>
       <reg>
        слезал
       </reg>
       <orig>
        слѣзалъ
       </orig>
      </choice>
      <choice>
       <reg>
        с
       </reg>
       <orig>
        съ
       </orig>
      </choice>
      печи,
      <choice>
       <reg>
        изредка
       </reg>
       <orig>
        изрѣдка
       </orig>
      </choice>
      <choice>
       <reg>
        стонал
       </reg>
       <orig>
        стоналъ
       </orig>
      </choice>
      ,
      <choice>
       <reg>
        просил
       </reg>
       <orig>
        просилъ
       </orig>
      </choice>
