      <choice>
       <reg>
        ездил
       </reg>
       <orig>
        ѣздилъ
       </orig>
      </choice>
      на
      <choice>
       <reg>
        курьерских
       </reg>
       <orig>
        курьерскихъ
       </orig>
      </choice>
      ,
      <choice>
       <reg>
        певал
