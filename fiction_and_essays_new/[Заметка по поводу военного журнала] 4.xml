     <choice>
      <reg>
       приглашения
      </reg>
      <orig>
       приглашенiя
      </orig>
     </choice>
     <choice>
      <reg>
       сотрудников
      </reg>
      <orig>
       сотрудниковъ
      </orig>
     </choice>
