    </reg>
   </choice>
   <choice>
    <reg>
     в
    </reg>
   </choice>
   <choice>
    <reg>
     двор
    </reg>
   </choice>
   и
   <choice>
    <reg>
     лёг
    </reg>
   </choice>
   <choice>
    <reg>
     в
    </reg>
   </choice>
   саду
   <choice>
    <reg>
     под
    </reg>
   </choice>
   <choice>
    <reg>
     кустом
    </reg>
   </choice>
